<%- if order.id == session[:current_order_id]%>
  <div class="order header">
    <p id="header"> Seu pedido </p>
    <p>
      <span>ID do pedido:</span>
      <%= order.id %>
    </p>
    <p>
      <span>Situação:</span>
      <%= order.status %>
    </p>
  </div>

  <%- if order.order_has_meals.any? %>
    <div class="order items">
      <% order.order_has_meals.each do |meal_order| %>
        <p>
          <br />
          Nome: <%= Meal.find(meal_order.meal_id).name %>
          <br>
          Preço unitário: <%= Meal.find(meal_order.meal_id).price %>
          <br>
          Quantidade: <%= meal_order.quantity %>
          <br>
          Preço: <%= meal_order.price %>
        </p>
      <% end %>
    </div>
  <% else %>
    <div class="vazio">
      <p>Parece que você ainda não selecionou nada.</p>
    </div>
  <% end -%>
  <div class="order footer">
    <p>
      <strong>Preço total:</strong>
      R$ <%= order.price %>
    </p>
  </div>
<% else %>
  <%- if order.id != session[:current_order_id]%>
    <div class="order old">
      <p>
        <span>ID do pedido:</span>
        <%= order.id %>
      </p>
      <p>
        <span>Situação:</span>
        <%= order.status %>
      </p>
      <p>
        <span>Items pedidos:</span>
        <br />
        <% order.order_has_meals.each do |meal_order| %>
          <span>
            <br />
            <%= Meal.find(meal_order.meal_id).name %>
            x<%= meal_order.quantity %>
          </span>
        <% end %>
      </p>
      <p>
        <strong>Preço total:</strong>
        R$ <%= order.price %>
      </p>
    </div>
  <% end -%>
<% end -%>
