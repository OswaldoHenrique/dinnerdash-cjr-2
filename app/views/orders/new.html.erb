<h1>Prato</h1>
<%= form_with scope: :order, url: orders_path, local: true do |form| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <strong>
        <%= pluralize(@order.errors.count, "erro") %> probiram
        a criacao do prato:
      </strong>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :status %><br>
    <%= form.number_field :status, in: 0...5 %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>
