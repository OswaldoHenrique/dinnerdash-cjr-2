<%= stylesheet_link_tag "profile", media: "all", "data-turbolinks-track" => "reload" %>
<link href="https://fonts.googleapis.com/css?family=Amaranth" rel="stylesheet">

<header>
  <nav>
    <span class="logo">
      <%= link_to "dinnerdash", root_path %>
    </span>
    <ul>
      <%- if user_signed_in? %>
        <li>
          <%= link_to "sair", destroy_session_path(:user),
          method: :delete,
          data: { confirm: 'Deseja sair?' } %><br />
        </li>
        <li>
          <%= link_to "perfil", edit_registration_path(:user) %><br />
        </li>
      <% else %>
        <li>
          <%= link_to "cadastro", new_registration_path(:user) %><br />
        </li>
        <li>
          <%= link_to "entrar", new_session_path(:user) %><br />
        </li>
      <% end -%>
    </ul>
  </nav>
  <h1 class="welcome">
    Seu perfil
  </h1>
  <h6 class="welcome">
    Atualize os seus dados pessoais e senha
  </h6>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "nome" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Nova senha" %> <i>(deixe em branco caso não queira alterar)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Confirme sua nova senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Senha atual, por questão de segurança" %><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "atualizar meu perfil" %>
  </div>
<% end %>

<%= button_to "cancelar conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %>
